<Window x:Class="WorseApp.ContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorseApp"
        mc:Ignorable="d"
        Title="ContactWindow" Height="223.798" Width="327.496">
    <Grid>
        <Label Content="Contact" HorizontalAlignment="Left" Margin="98,19,0,0" VerticalAlignment="Top" Height="40" Width="169" FontSize="24" FontWeight="Bold" FontFamily="Times New Roman"/>
        <Label Content="Name " HorizontalAlignment="Left" Margin="0,76,0,0" VerticalAlignment="Top" Height="40" Width="122" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="27" Margin="68,80,0,0" TextWrapping="Wrap" Text="Enter Name" VerticalAlignment="Top" Width="241" FontSize="16" GotMouseCapture="NameTextBox_GotMouseCapture"  />
        <Button x:Name="SaveContactButton" Content="Save Contact" HorizontalAlignment="Left" Margin="68,149,0,0" VerticalAlignment="Top" Width="199" Height="35" FontSize="16" FontWeight="Bold" Click="SaveContactButton_Click"/>
    </Grid>
</Window>
